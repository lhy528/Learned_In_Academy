<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="stopwatch" class="spring_aop05_around_advice.CheckTime">
	
</bean>

<bean id="biz" class="spring_aop05_around_advice.CustomerServiceImple">
	<property name="name" value="이순신"></property>
    <property name="email" value="gen@samgun.com" />
</bean>

<bean id="proxyBean" class="org.springframework.aop.framework.ProxyFactoryBean">
	<property name="target" ref="biz"></property>
    <property name="interceptorNames">
        <value>stopwatch</value>
    </property>
</bean>

</beans>
