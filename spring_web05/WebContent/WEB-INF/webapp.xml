<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- SimpleUrlHandlerMapping : url을 통한 매핑 시 context-path를 제외한 나머지 경로로 비교
ex) context-path : http://localhost:8088/spring_web05/를 제외한 나머지 부분 -->
<!-- 
 - 경로 매핑 방식
 1. ? : 1개의 문자 매핑
 2. * : 0개 이상의 문자 매핑
 3. ** : 0개 이상의 디렉토리와 매핑 -->

<bean id="SimpleUrlHandlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="alwaysUseFullPath" value="true" />
    <property name="mappings">
        <props>
            <prop key="/*.do">hi</prop>
            <prop key="/**/*.do">test</prop>
        </props>
    </property>
    
</bean>

<bean id="InternalResourceViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	<property name="prefix" value="/WEB-INF/jsp/" /> <!-- WEB 규약상 브라우저가 볼 수 없는 위치 -->
    <property name="suffix" value=".jsp" />
</bean>

<bean id="hi" class="kr.co.goott.spring_web05.HiController"></bean>

<bean id="test" class="kr.co.goott.spring_web05.TestController"></bean>

</beans>
